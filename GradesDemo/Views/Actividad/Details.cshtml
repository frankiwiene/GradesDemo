@model List<Actividad>
<h2>Subjects</h2>

@foreach (var _actividad in @Model)
{
    <div style="border: 1px solid black; padding: 10px; width: 300px; text-align: center;">
        <p><strong>ID:  </strong> @_actividad.Id</p>
        <p><strong>Type:</strong> @_actividad.Type</p>
        <p><strong>Grade:</strong> @_actividad.Grade</p>
        <p><strong>SubjectId:</strong>@_actividad.SubjectId</p>
        <p><strong>Subject:</strong> @(_actividad.Subject != null ? _actividad.Subject.Name : " Sin Subject")</p>
    </div>
}

